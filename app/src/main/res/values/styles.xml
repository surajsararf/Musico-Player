<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base"></style>
    <style name="SplashTheme" parent="SplashTheme.Base">
    </style>
    <style name="SplashTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/welcome_screen</item>
    </style>
    <style name="toolbartext">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize16</item>
    </style>
</resources>
